{
  "compilerOptions": {
    "target": "es2022",
    "module": "node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "removeComments": true,
    "lib": [
      "ES2023"
    ]
  },
  "include": [
    "bin/*.ts",
    "src/*.ts"
  ]
}
